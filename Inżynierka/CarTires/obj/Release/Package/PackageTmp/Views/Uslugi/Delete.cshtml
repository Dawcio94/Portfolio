@model CarTiresService.Models.Uslugi

@{
    ViewBag.Title = "Usuwanie usługi";
}

<h2>Usuwanie usługi ID:@Model.UslugaId</h2>

<h3>Czy napewno chcesz usunąć tą usługę?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nazwa usługi")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazwaUslugi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Koszt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Koszt)
        </dd>

        <dt>
            @Html.DisplayName("Czas trwania")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CzasTrwania)
        </dd>

        <dt>
            @Html.DisplayName("Typ auta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypAuta)
        </dd>

        <dt>
            @Html.DisplayName("Typ felgi")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypFelgi)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-info btn-lg" />
            @Html.ActionLink("Anuluj", "Index")
        </div>
    }
</div>
