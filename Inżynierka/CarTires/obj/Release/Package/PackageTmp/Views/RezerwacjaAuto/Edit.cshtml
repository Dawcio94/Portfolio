@model CarTiresService.Models.RezerwacjaAuto

@{
    ViewBag.Title = "Edycja rezerwacji";
}

<h2>Edycja rezerwacji ID:@Model.RezerwacjeId</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RezerwacjaAutoId)

        <div class="form-group">
            @Html.LabelFor(model => model.RezerwacjeId, "Rezerwacja "+ (string)@ViewBag.RezerwacjeId, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.ValidationMessageFor(model => model.RezerwacjeId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AutoId, "Auto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group">
                @Html.DropDownList("AutoId", null, htmlAttributes: new { @class = "control-label col-md-5" })
                @Html.ValidationMessageFor(model => model.AutoId, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-info" onclick="window.location.href='@Url.Action("CreateSimpleEdit", "Auta",new { id=@ViewBag.KlientId,rezerwacjaId=@Model.RezerwacjeId,stareKlientId=@ViewBag.StareKlientId, stareAutoId=@ViewBag.StareAutoId})'">
                    +
                </button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" value="@ViewBag.StareKlientId" name="stareKlientId" />
                <input type="hidden" value="@ViewBag.StareAutoId" name="stareAutoId" />
                <input type="submit" value="Dalej" class="btn btn-info btn-lg" />
                @Html.ActionLink("Anuluj", "CancelEdit", new { rezerwacjaId = Model.RezerwacjeId, stareKlientId = @ViewBag.StareKlientId })
            </div>
        </div>
        <div>
            @Html.ActionLink("Wstecz", "Edit", "Rezerwacje", new { id = Model.RezerwacjeId }, null)
        </div>
    </div>
}

