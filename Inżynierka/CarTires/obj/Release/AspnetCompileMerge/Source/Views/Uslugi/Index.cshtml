@model IEnumerable<CarTiresService.Models.Uslugi>

@{
    ViewBag.Title = "Usługi";
}

<h2>Usługi</h2>

<p>
    @Html.ActionLink("Dodaj nową usługe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa usługi")
        </th>
        <th>
            @Html.DisplayName("Koszt[PLN]")
        </th>
        <th>
            @Html.DisplayName("Czas trwania")
        </th>
        <th>
            @Html.DisplayName("Typ auta")
        </th>
        <th>
            @Html.DisplayName("Typ felgi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaUslugi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Koszt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CzasTrwania)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypAuta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypFelgi)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.UslugaId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.UslugaId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.UslugaId })
        </td>
    </tr>
}

</table>
