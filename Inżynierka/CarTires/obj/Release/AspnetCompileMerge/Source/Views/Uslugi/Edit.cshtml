@model CarTiresService.Models.Uslugi

@{
    ViewBag.Title = "Edycja usługi";
}

<h2>Edycja usługi ID:@Model.UslugaId</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UslugaId)

        <div class="form-group">
            @Html.Label("Nazwa usługi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazwaUslugi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazwaUslugi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Koszt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Koszt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Koszt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Czas trwania", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CzasTrwania, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CzasTrwania, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Typ auta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group">
                @Html.DropDownListFor(model => model.TypAuta, new SelectList(Enum.GetValues(typeof(CarTiresService.Models.TypeOfCarEnum))),
               "Wybierz typ auta", htmlAttributes: new { @class = "control-label col-md-4" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Typ felgi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group">
                @Html.DropDownListFor(model => model.TypFelgi, new SelectList(Enum.GetValues(typeof(CarTiresService.Models.TypeOfWheel))),
               "Wybierz typ felgi", htmlAttributes: new { @class = "control-label col-md-4" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-info btn-lg" />
                @Html.ActionLink("Anuluj", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
