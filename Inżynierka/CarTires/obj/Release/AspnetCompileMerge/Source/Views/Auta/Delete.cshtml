@model CarTiresService.Models.Auta

@{
    ViewBag.Title = "Usuwanie auta";
}

<h2>Usuwanie auta ID:@Model.AutoId</h2>

<h3>Czy napewno chcesz usunąć te auto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nazwa auta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazwaAuta)
        </dd>

        <dt>
            @Html.DisplayName("Model auta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModelAuta)
        </dd>

        <dt>
            @Html.DisplayName("Numer rejestracyjny")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumerRejestracyjny)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VIN)
        </dd>

        <dt>
            @Html.DisplayName("Typ auta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypAuta)
        </dd>

        <dt>
            @Html.DisplayName("Klient")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Klienci.Imie)
            @Html.DisplayFor(model => model.Klienci.Nazwisko)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-info btn-lg" /> |
            @Html.ActionLink("Anuluj", "Index")
        </div>
    }
</div>
