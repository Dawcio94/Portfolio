@model IEnumerable<CarTiresService.Models.CzesciZamienne>

@{
    ViewBag.Title = "Magazyn";
}

<h2>Magazyn</h2>

<p>
    @Html.ActionLink("Dodaj nowy towar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa części")
        </th>
        <th>
            @Html.DisplayName("Ilość")
        </th>
        <th>
            @Html.DisplayName("Koszt szt")
        </th>
        <th>
            @Html.DisplayName("Typ auta")
        </th>
        <th>
            @Html.DisplayName("Typ felgi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaCzesci)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ilosc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KosztSztuka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypAuta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypFelgi)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CzescId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CzescId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CzescId })
        </td>
    </tr>
}

</table>
